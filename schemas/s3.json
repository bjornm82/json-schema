{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "#s3",
	"type": "object",
    "required": [
        "type",
        "name",
        "path",
        "bucket",
        "key",
        "secret"
    ],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "s3"
            ]
        },
        "name": {
            "type": "string"
        },
        "path": {
            "type": "string"
        },
        "endpoint": {
            "type": "string",
            "format": "uri"
        },
        "bucket": {
            "type": "string"
        },
        "key": {
            "type": "string",
            "minLength": 1
        },
        "secret": {
            "type": "string",
            "minLength": 1
        }
	},
	"additionalProperties": false
}