        "type",
        "name",
        "username",
        "password",
        "database",
        "table",
        "host",
        "port"
    ],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "postgres"
            ]
        },
        "name": {
            "type": "string"
        },
        "username": {
            "type": "string"
        },
        "password": {
            "type": "string"
        },
        "database": {
            "type": "string"
        },
        "table": {
            "type": "string"
        },
        "host": {
            "type": "string"
        },
        "port": {
            "type": "integer"
        }
	},
	"additionalProperties": false
}